<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".AdminDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailTitle"
        android:text="Title"
        android:layout_marginTop="14dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_gravity="top|center"
        android:layout_marginBottom="12dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/detailLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/detailTitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Company"
            android:layout_below="@id/detailLogo"
            android:id="@+id/detailCompany"
            android:textSize="20sp"
            android:drawableLeft="@drawable/company"
            android:drawablePadding="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Location"
            android:id="@+id/detailLocation"
            android:layout_below="@id/detailCompany"
            android:textSize="20sp"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Pay"
            android:id="@+id/detailPayScale"
            android:layout_below="@id/detailLocation"
            android:textSize="20sp"
            android:drawableLeft="@drawable/currency"
            android:drawablePadding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Type"
            android:layout_below="@id/detailPayScale"
            android:id="@+id/detailType"
            android:paddingTop="8dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:background="@color/blue2"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailType"
            android:id="@+id/ll"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Created On :"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Date"
                android:id="@+id/detailCreated"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_below="@id/ll"
            android:text="Description"
            android:textSize="26sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="15dp"
            android:text="Description"
            android:id="@+id/detailDesc"
            android:layout_below="@id/ll"
            android:textSize="20sp" />




            <com.github.clans.fab.FloatingActionMenu
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_gravity="end"
                android:layout_marginBottom="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:menu_colorNormal="@color/blue2"
                app:menu_colorPressed="@color/red"
                app:menu_fab_size="normal"
                android:layout_below="@id/detailDesc"
                app:menu_icon="@drawable/list"
                app:menu_openDirection="down"
                app:menu_showShadow="true">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/deleteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete"
                    app:fabSize="mini"
                    app:fab_colorNormal="@color/red"
                    app:fab_showShadow="true" />

            </com.github.clans.fab.FloatingActionMenu>


    </RelativeLayout>





</ScrollView>