<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue2"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/set_profile"
            android:elevation="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_top"
            android:layout_marginTop="10dp"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginTop="10dp"
                android:id="@+id/profileUsername"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/lato_bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileUsername"
                android:id="@+id/rl"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User's Details"
                    android:id="@+id/userText"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:drawableLeft="@drawable/username"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/lato_bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:layout_below="@id/userText"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    android:id="@+id/nameText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/ageText"
                    android:layout_below="@id/profileName"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato_regular"
                    android:id="@+id/profileAge"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age:"
                    android:layout_below="@id/profileName"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    android:id="@+id/ageText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/nameText"
                    android:layout_below="@id/userText"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato_regular"
                    android:id="@+id/profileName"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:layout_below="@id/ageText"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    android:id="@+id/addressText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/addressText"
                    android:layout_below="@id/ageText"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato_regular"
                    android:id="@+id/profileAddress"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl"
                android:id="@+id/rl2"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Details"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:fontFamily="@font/lato_regular"
                    android:id="@+id/contactText"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:id="@+id/profileEmail"
                    android:layout_below="@id/contactText"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:id="@+id/profilePhone"
                    android:layout_below="@id/profileEmail"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="8dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/rl3"
                android:layout_below="@id/rl2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quailifications"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:drawableLeft="@drawable/qualifications"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:id="@+id/qualificationText"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="qualification"
                    android:id="@+id/profileQualify"
                    android:layout_below="@id/qualificationText"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato_regular"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl4"
                android:layout_below="@id/rl3"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Work Experience"
                    android:textSize="24dp"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:id="@+id/experienceText"
                    android:drawableLeft="@drawable/work"
                    android:drawablePadding="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileExperience"
                    android:layout_below="@id/experienceText"
                    android:text="Experience"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"/>

            </RelativeLayout>

            <Button
                android:id="@+id/edit_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/rl4"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="Edit Profile"
                android:textStyle="bold"
                android:fontFamily="@font/lato_bold"
                android:textSize="30sp"
                android:padding="10dp"/>

        </RelativeLayout>

    </LinearLayout>


</ScrollView>