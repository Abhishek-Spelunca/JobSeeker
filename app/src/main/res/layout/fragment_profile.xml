<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgrd"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:elevation="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/set_profile"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_top"
            android:padding="8dp">

            <TextView
                android:id="@+id/profileUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="Username"
                android:textColor="@color/b2"
                android:textSize="22sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileUsername"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/userText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/username"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="User's Details"
                    android:textColor="@color/b2"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/userText"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_regular"
                    android:paddingStart="10dp"
                    android:text="Name:"
                    android:textColor="@color/b2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/userText"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/nameText"
                    android:fontFamily="@font/lato_regular"
                    android:text="Name"
                    android:textColor="@color/b2"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/ageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profileName"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_regular"
                    android:paddingStart="10dp"
                    android:text="Age:"
                    android:textColor="@color/b2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profileName"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/ageText"
                    android:fontFamily="@font/lato_regular"
                    android:text="Age"
                    android:textColor="@color/b2"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ageText"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_regular"
                    android:paddingStart="10dp"
                    android:text="Address:"
                    android:textColor="@color/b2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ageText"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/addressText"
                    android:fontFamily="@font/lato_regular"
                    android:text="Address"
                    android:textColor="@color/b2"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/contactText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/contact"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Contact Details"
                    android:textColor="@color/b2"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contactText"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/lato_regular"
                    android:paddingStart="10dp"
                    android:text="Email"
                    android:textColor="@color/b2"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/profilePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profileEmail"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/lato_regular"
                    android:paddingStart="10dp"
                    android:text="Phone"
                    android:textColor="@color/b2"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl2"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/qualificationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/qualifications"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Quailifications"
                    android:textColor="@color/b2"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileQualify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qualificationText"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_regular"
                    android:paddingStart="10dp"
                    android:text="qualification"
                    android:textColor="@color/b2"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl3"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/experienceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/work"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Work Experience"
                    android:textColor="@color/b2"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/experienceText"
                    android:layout_marginTop="8dp"
                    android:paddingStart="10dp"
                    android:text="Experience"
                    android:textColor="@color/b2"
                    android:textSize="18sp" />

            </RelativeLayout>

            <Button
                android:id="@+id/edit_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/rl4"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_border"
                android:backgroundTint="@color/col"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>


</ScrollView>