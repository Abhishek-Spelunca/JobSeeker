<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:padding="4dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="18dp"
            android:id="@+id/recImg"
            android:src="@drawable/resume"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:scaleType="centerCrop"
            android:elevation="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/recImg">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Title"
                    android:id="@+id/rec_title"
                    android:textColor="@color/b2"
                    android:fontFamily="@font/lato_bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="19sp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <ImageView
                    android:id="@+id/recCompany"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="2.6dp"
                    android:src="@drawable/company"
                    android:scaleType="fitCenter"
                    app:tint="@color/color"/>

                <TextView
                    android:textColor="@color/b2"
                    android:fontFamily="@font/lato_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/recCompany"
                    android:text="Company Name"
                    android:id="@+id/rec_company"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <ImageView
                    android:id="@+id/recLocation"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/location"
                    android:layout_marginTop="2.6dp"
                    android:scaleType="fitCenter"
                    app:tint="@color/color"/>

                <TextView
                    android:textColor="@color/b2"
                    android:fontFamily="@font/lato_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/recLocation"
                    android:text="Location"
                    android:id="@+id/rec_location"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <ImageView
                    android:id="@+id/recPayScale"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="2.6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/currency"
                    app:tint="@color/color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/recPayScale"
                    android:text="Pay Scale"
                    android:fontFamily="@font/lato_bold"
                    android:id="@+id/rec_pay"
                    android:background="@color/green2"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Type"
                    android:id="@+id/rec_type"
                    android:textSize="14sp"
                    android:fontFamily="@font/lato_bold"
                    android:singleLine="true"
                    android:background="@drawable/edit_border"
                    android:backgroundTint="@color/col"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created on:"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:layout_toStartOf="@id/rec_Created"
                    android:id="@+id/recCreatedText"
                    android:ellipsize="end"
                    android:textColor="@color/grey"

                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created at"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/b2"
                    android:fontFamily="@font/lato_bold"
                    android:singleLine="true"
                    android:id="@+id/rec_Created"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="0"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/rec_Desc"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="0"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/rec_Url"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"/>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>