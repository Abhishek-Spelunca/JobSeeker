<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/col"
    tools:context=".HomeFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi Welcome Back !"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/lato_bold"
        android:padding="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/admin_border"
        android:backgroundTint="@color/col"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:searchHintIcon="@null"
            app:iconifiedByDefault="false"
            android:focusable="false"
            android:background="@drawable/search_border"
            android:backgroundTint="@color/white"
            app:queryHint="What kind of job are u looking ?"
            android:id="@+id/search"
            app:searchIcon="@drawable/search_icon"
            app:closeIcon="@drawable/clear"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/search_border2"
            android:backgroundTint="@color/white"
            android:focusable="false"
            app:closeIcon="@drawable/clear"
            app:iconifiedByDefault="false"
            app:queryHint="Search Location..."
            app:searchHintIcon="@null"
            app:searchIcon="@drawable/location" />
    </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_top">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Jobs!"
                android:textStyle="bold"
                android:textColor="@color/b2"
                android:textSize="28sp"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="14dp"
                android:id="@+id/text"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:id="@+id/error">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="520dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/error"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <ImageView
                android:id="@+id/noData"
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/err"
                android:scaleType="fitCenter"
                android:visibility="gone"/>
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/text"
                android:id="@+id/swipe">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                android:id="@+id/recyclerView"
                android:visibility="gone"/>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </RelativeLayout>
</LinearLayout>