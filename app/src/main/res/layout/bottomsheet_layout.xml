<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bkg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="6dp"
        android:layout_gravity="center|top"
        android:background="@drawable/border"
        android:backgroundTint="@color/col"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center|top"
            android:scaleType="centerCrop"
            android:src="@drawable/how" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/lato_bold"
            android:text="To apply... Please Visit"
            android:textAlignment="center"
            android:textColor="@color/b2"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:autoLink="web|all"
            android:drawableLeft="@drawable/website"
            android:drawablePadding="8dp"
            android:fontFamily="@font/lato_regular"
            android:text="Company url"
            android:textAlignment="center"
            android:textColor="@color/color"
            android:textIsSelectable="true"
            android:textSize="18sp" />

        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_border"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/lato_bold"
            android:text="Ok!"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>