<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgrd"
    tools:context=".UploadJobActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/back" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_top"
            android:padding="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_border"
                    android:backgroundTint="@color/col"
                    android:text="Upload Job"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/image" />

                <EditText
                    android:id="@+id/job_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_border"
                    android:gravity="start|center_vertical"
                    android:hint="Title"
                    android:padding="16dp"
                    android:textColor="@color/b2" />

                <EditText
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_border"
                    android:gravity="start|center_vertical"
                    android:hint="Company"
                    android:padding="16dp"
                    android:textColor="@color/b2" />

                <EditText
                    android:id="@+id/job_url"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_border"
                    android:gravity="start|center_vertical"
                    android:hint="Company Website"
                    android:inputType="textUri"
                    android:padding="16dp"
                    android:textColor="@color/b2" />

                <EditText
                    android:id="@+id/job_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_border"
                    android:gravity="start|center_vertical"
                    android:hint="Job Type"
                    android:padding="16dp"
                    android:textColor="@color/b2" />

                <EditText
                    android:id="@+id/pay_scale"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_border"
                    android:gravity="start|center_vertical"
                    android:hint="Company Strength"
                    android:padding="16dp"
                    android:textColor="@color/b2" />

                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_border"
                    android:gravity="start|center_vertical"
                    android:hint="Company Address"
                    android:padding="16dp"
                    android:textColor="@color/b2" />


                <EditText
                    android:id="@+id/Date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_border"
                    android:gravity="start|center_vertical"
                    android:hint="Created On"
                    android:inputType="date"
                    android:padding="16dp"
                    android:textColor="@color/b2" />

                <EditText
                    android:id="@+id/upload_description"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_border"
                    android:gravity="start|center_vertical|top"
                    android:hint="Qualification and Description"
                    android:padding="16dp"
                    android:textColor="@color/b2" />

                <Button
                    android:id="@+id/add_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_border"
                    android:backgroundTint="@color/col"
                    android:text="Upload"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="20dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>