<resources>

    <style name="Base.Theme.JobSeeker" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/b2</item>
        <item name="colorPrimaryVariant">@color/grey</item>
    </style>

    <style name="AppTheme" parent="Base.Theme.JobSeeker">
        <item name="android:textViewStyle">@style/RobotTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotButtonStyle</item>
    </style>

    <style name="RobotTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RobotButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:background">@drawable/edit_border</item>
        <item name="android:backgroundTint">@color/b2</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

    </style>

    <style name="DialogAnimation">

        <item name="android:windowEnterAnimation">@anim/slide_in_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_out_animation</item>
    </style>

    <style name="Theme.JobSeeker" parent="Base.Theme.JobSeeker" />
</resources>